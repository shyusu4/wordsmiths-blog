<%= render "shared/title" %>
<div class="user-container">
        <div class="user-card">
            <img class="user-img" src=<%= @user.photo %> alt=<%= @user.name %>>
            <div class="user-card__content">
                <h3 class="user-name"><%= @user.name %></h3>
                <div class="postscount">
                    <p>Number of posts: <%= @user.posts.count %></p>
                </div>
            </div>
        </div>
    <div class="user-bio">
        <h4>Bio</h4>
        <p><%= @user.bio %></p>
    </div>
        <% @user.recent_posts.each do |post| %>
        <a id="post-<%=post.id%>" href=<%= user_post_path(@user.id, post.id) %>>
        <div class="user-post__item">
            <div class="user-post__content">
                <h4><%= post.title %></h4>
                <p><%= post.text[0..150] %></p>
                <div class="postscount">
                    <span>Comments: <%= post.comments_counter %>,</span>
                    <span>Likes: <%= post.likes_counter %></span>
                </div>
            </div>
        <div>
        </a>
        <% end %>
</div>

<% if @current_user %>
<a href="/users/<%= @user.id %>/posts/new">
<button class="allposts-btn">
        Create new post
</button></a>
<% end %>

<a href="/users/<%= @user.id %>/posts">
<button class="allposts-btn">
        See all posts
</button></a>